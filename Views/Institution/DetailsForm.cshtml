@model  CascBasic.Models.ViewModels.InstBasicViewModel
@using (Html.BeginForm("DetailsForm", "Institution", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()
    <div class="modal-header">
        <h5 class="modal-title">Update details...</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>
    <div class="modal-body">
        <input type="text" value="@Model.Id" name="Id" hidden />
        <dl class="row">
            <dt class="col-sm-3">Campus</dt>
            <dd class="col-sm-9">@Html.TextBoxFor(m => m.Campus, new { @placeholder = "Campus code", @class = "form-control form-control-sm" })</dd>

            <dt class="col-sm-3">Name</dt>
            <dd class="col-sm-9">@Html.TextBoxFor(m => m.Name, new { @placeholder = "Name", @class = "form-control form-control-sm" })</dd>

            <dt class="col-sm-3">College name</dt>
            <dd class="col-sm-9">@Html.TextBoxFor(m => m.CollegeName, new { @placeholder = "College name", @class = "form-control form-control-sm" })</dd>
            <hr />


            <dt class="col-sm-3">Email</dt>
            <dd class="col-sm-9">
                <div class="input-group input-group-sm">
                    <div class="input-group-prepend">
                        <span class="input-group-text" id="email-addon"><i class="material-icons md-18">email</i></span>
                    </div>
                    @Html.TextBoxFor(m => m.ZEmail, new { @placeholder = "Email", @class = "form-control form-control-sm", aria_label = "Email", aria_describedby = "email-addon" })

                </div>
            </dd>

            <dt class="col-sm-3">Phone</dt>
            <dd class="col-sm-9">
                <div class="input-group input-group-sm">
                    <div class="input-group-prepend">
                        <span class="input-group-text" id="email-addon"><i class="material-icons md-18">phone</i></span>
                    </div>
                    @Html.TextBoxFor(m => m.CollegePhone, new { @placeholder = "Phone", @class = "form-control form-control-sm", aria_label = "Email", aria_describedby = "email-addon" })

                </div>
            </dd>

            <dt class="col-sm-3">FAX</dt>
            <dd class="col-sm-9">
                <div class="input-group input-group-sm">
                    <div class="input-group-prepend">
                        <span class="input-group-text" id="email-addon"><i class="material-icons md-18">print</i></span>
                    </div>
                    @Html.TextBoxFor(m => m.CollegeFax, new { @placeholder = "Fax", @class = "form-control form-control-sm", aria_label = "Email", aria_describedby = "email-addon" })

                </div>
            </dd>

            <hr />
            <dt class="col-sm-3">Welcome message</dt>
            <dd class="col-sm-9">@Html.TextBoxFor(m => m.WelcomeMsg, new { @placeholder = "Welcome message", @class = "form-control form-control-sm" })</dd>

            <dt class="col-sm-3">VAT number</dt>
            <dd class="col-sm-9">@Html.TextBoxFor(m => m.CollegeVATnumber, new { @placeholder = "VAT number", @class = "form-control form-control-sm" })</dd>

            <dt class="col-sm-3">Charity number</dt>
            <dd class="col-sm-9">@Html.TextBoxFor(m => m.CollegeCharityNumber, new { @placeholder = "Charity number", @class = "form-control form-control-sm" })</dd>

        </dl>
    </div>
    <div class="modal-footer">
        <input type="submit" class="btn btn-sm btn-outline-success" value="Save" />
        <button type="button" class="btn btn-sm btn-outline-secondary" data-dismiss="modal">Cancel</button>
    </div>
}


