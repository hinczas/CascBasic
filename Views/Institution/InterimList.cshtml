@model IEnumerable<CascBasic.Models.ViewModels.InstApiViewModel>

<div class="container">
    <h5>
        <i class="material-icons">info</i>
        <span>Multiple institutions found</span>
    </h5>
    <hr />
    <div class="mgmt mgmt-det">
            <p>Please select institution:</p>
        <div class="row">
            <div class="col">
                <div class="table-responsive">
                    <table class="table table-striped table-sm table-hover">
                        <thead>
                            <tr>
                                <th width="10%">ID</th>
                                <th>Name</th>
                                <th width="20%"></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var itm in Model)
                            {
                                using (Html.BeginForm("FromApiValidateAsync", "Institution", FormMethod.Post))
                                {
                                    @Html.AntiForgeryToken()
                                    <tr>
                                        <td>@itm.InstId</td>
                                        <td>@itm.Name</td>
                                        <td style="text-align:right;">
                                            <input type="text" name="insid" value="@itm.InstId" hidden />
                                            <button type="submit" class="btn btn-sm btn-outline-primary">Select</button>
                                        </td>
                                    </tr>
                                }

                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

