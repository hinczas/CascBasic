<div class="container">
    <h5>
        <i class="material-icons">group</i>
        <span>Group details</span>
        <button class="btn btn-sm btn-outline-primary" data-toggle="modal" data-target="#formModal">edit</button>
    </h5>
    <hr />
    <div class="mgmt mgmt-det">
        
        <dl class="row">
            <dt class="col-sm-2">Name</dt>
            <dd class="col-sm-10">@Model.Name</dd>
            <dt class="col-sm-2">Description</dt>
            <dd class="col-sm-10">@Model.Description</dd>
            <dt class="col-sm-2">Institution</dt>
            <dd class="col-sm-10">
                @if (Model.InstCrest)
                {
                    <img class="img-sm" src="/Institution/GetCrest/@Model.InstId" alt="@Model.InstName" /> @Html.ActionLink(Model.InstName, "Manage", "Institution", new { id = Model.InstId }, null)
                }
                else
                {
                    <img class="img-sm" src="/Content/media/images/no_photo.png" alt="@Model.InstName" /> @Html.ActionLink(Model.InstName, "Manage", "Institution",  new { id = Model.InstId }, null)
                }
            </dd>
        </dl>

    </div>
    <h5>
        <i class="material-icons">security</i>
        <span>Roles</span>
        <button type="button" class="btn btn-sm btn-outline-success" onclick="document.getElementById('rolesForm').submit()">save</button>
        <input type="text" class="form-control form-control-sm search-js" id="searchRoles" placeholder="role..." name="search" style="width:200px;" />
    </h5>
    <hr />
    <div class="mgmt mgmt-log">
        <div class="row">
            <div class="col">
                <div class="table-responsive">
                    <table class="table table-striped table-sm" id="group-roles-tbl">
                        <thead>
                            <tr>
                                <th width="1%">#</th>
                                <th width="1%"></th>
                                <th width="16%">Role</th>
                                <th width="82%">Description</th>
                            </tr>
                        </thead>
                        <tbody>
                            @using (Html.BeginForm("Changeroles", "Permissions", FormMethod.Post, new { id = "rolesForm" }))
                            {
                                foreach (var rol in Model.Roles)
                                {
                                    <tr>
                                        <td><input class="form-check-input" name="roles" type="checkbox" value="@rol.Id" @rol.Checked></td>
                                        <td><input class="form-input" name="id" type="text" value="@Model.Id" hidden></td>
                                        <td>@rol.Name</td>
                                        <td>@rol.Description</td>
                                    </tr>
                                }
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
    <h5>
        <i class="material-icons">person</i>
        <span>Users</span>
        <button type="button" class="btn btn-sm btn-outline-success" onclick="document.getElementById('usersForm').submit()">save</button>
        <input type="text" class="form-control form-control-sm search-js" id="searchUsers" placeholder="user..." name="search" style="width:200px;" />
    </h5>
    <hr />
    <div class="mgmt mgmt-sec">
        <div class="row">
            <div class="col">
                <div class="table-responsive">
                    <table class="table table-striped table-sm table-hover" id="group-users-tbl">
                        <thead>
                            <tr>
                                <th width="1%"><input class="check-all" name="toggle" type="checkbox" value="0" /></th>
                                <th width="1%"></th>
                                <th width="29%">Username</th>
                                <th width="20%">Last name</th>
                                <th width="20%">First name</th>
                                <th width="29%">Email</th>
                            </tr>
                        </thead>
                        <tbody>
                            @using (Html.BeginForm("ChangeUsers", "Permissions", FormMethod.Post, new { id = "usersForm" }))
                            {
                                foreach (var usr in Model.Users)
                                {
                                    <tr>
                                        <td><input class="form-check-input check-sngl" name="users" type="checkbox" value="@usr.Id" @usr.Checked /></td>
                                        <td><input class="form-input" name="id" type="text" value="@Model.Id" hidden /></td>
                                        <td>@Html.ActionLink(usr.UserName, "Index", "Manage", new { id = usr.Id }, null)</td>
                                        <td>@usr.LastName</td>
                                        <td>@usr.FirstName</td>
                                        <td>@usr.Email</td>
                                    </tr>
                                }
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>


<!-- Forms Modal -->
<div class="modal" tabindex="-1" role="dialog" id="formModal">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            @using (Html.BeginForm("EditGroup", "Permissions", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
            {
                @Html.AntiForgeryToken()
                <div class="modal-header">
                    <h5 class="modal-title">Change personal details...</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <input type="text" value="@Model.Id" name="Id" hidden />
                    <dl class="row">
                        <dt class="col-sm-3">Name</dt>
                        <dd class="col-sm-9">@Html.TextBoxFor(m => m.Name, new { @placeholder = "group name", @class = "form-control form-control-sm", required = "required" })</dd>

                        <dt class="col-sm-3">Description</dt>
                        <dd class="col-sm-9">@Html.TextBoxFor(m => m.Description, new { @placeholder = "group description", @class = "form-control form-control-sm" })</dd>
                    </dl>
                </div>
                <div class="modal-footer">
                    <input type="submit" class="btn btn-sm btn-outline-success" value="Save" />
                    <button type="button" class="btn btn-sm btn-outline-secondary" data-dismiss="modal">Cancel</button>
                </div>
            }
        </div>
    </div>
</div>


<script>
    $(document).ready(function () {

        $("#searchUsers").on("keyup", function () {
            var value = $(this).val().toLowerCase();
            $("#group-users-tbl tbody tr").filter(function () {
                $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1)
            });
        });

        $("#searchRoles").on("keyup", function () {
            var value = $(this).val().toLowerCase();
            $("#group-roles-tbl tbody tr").filter(function () {
                $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1)
            });
        });

        $('.check-all').on("change", function () {
            var checked = $(this).prop('checked');
            $('.check-sngl:visible').each(function () {
                $(this).prop('checked', checked);
            })
        });

    });
</script>