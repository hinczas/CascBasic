
@{
    Layout = null;
}
<style>
    body {
        display: flex;
        align-items: center;
        justify-content: center;
        height: 100vh;
        width: 100vw;
        background: #f8f8f8;
        font-family: Montserrat, sans-serif;
    }

    .container {
        background: white;
        height: auto;
        width: 40vw;
        padding: 1.5rem;
        box-shadow: 0px 3px 15px rgba(0, 0, 0, 0.2);
        border-radius: 0.5rem;
        text-align: center;
    }

	h1 {
		font-size: 2rem;
		margin: 0;
		margin-top: 1rem;

		color: #263238;

		transform: translateX(-0.1rem);
		animation: fadeIn 1s forwards 1.5s;
	}
    p {
        font-size: 1rem;
        margin: 0;
        margin-top: 0.5rem;
        color: #546e7a;
        transform: translateX(-0.1rem);
        animation: fadeIn 1s forwards 1.75s;
    }

.forbidden-sign {
	margin: auto;
	width: $size+($size/6);
	height: $size+($size/6);

	border-radius: 50%;

	display: flex;
	align-items: center;
	justify-content: center;

	background-color: $color;

	animation: grow 1s forwards;
}



    .forbidden-sign > img {
        width: 100px;
        height: 100px;
    }

</style>
<div class="container">
    <div class="forbidden-sign">
        <img src="~/Content/media/images/no-acc.png" />
    </div>
    <h1>403 - access to this page is restricted</h1>
    <p><b>@Session["role"]</b> role is not allowed to view this page.</p>
</div>
